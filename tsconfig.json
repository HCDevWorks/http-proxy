{
  "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "baseUrl": "src",
      "rootDirs": [
          "src"
      ],
      "outDir": "dist",
      "paths": {
          "@/*": [
              "*"
          ],
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "typeRoots": [
          "./node_modules/@types",
          "./src/types"
      ]
  },
  "include": [
      "src",
      "tests"
  ],
  "exclude": []
}